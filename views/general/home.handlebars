            <li class="col-sm-2 iconMenu" id="toContact" data='["Contact Us"]'><a href="/contact-us"><i class="fas fa-envelope"></i></a></li>

         </ul>

      </div>

      <div class="title">
         <h2>Best Sellers</h2>
      </div>
      
      <section class="productsGrid">
         
         {{#each data}}
            <div class="singleBox">
              <a href="/products/profile/{{id}}"><img src="/uploads/{{this.productPic}}" alt=""></a> 
      
            <div class="boxContent">
               <div class="itemTitle bsTitle">
                  <h3 class="titleName">{{this.title}}</h3> &nbsp | &nbsp <h3 class="titleCat">{{this.category}}</h3>
               </div>
                
               <div class="productData">
                  <p>Artist: <a class="dataArt" href="#">{{this.artist}}</a></p>
                  <p>Price: ${{this.price}}</p>
               </div>

               <a class="aProduct btn" href="/add-to-cart/{{this.id}}">Add to Cart</a>
               
            </div>
         
            </div>
         {{/each}}
      </section>   


       <div class="title">
         <h2>Categories</h2>
      </div>

      <section class="categories">
         <ul class="row boxWrapper">
            {{#each categories}}
               <li>
                  <div class="box img-1" style="background:{{colour}}">
                     <a href="#">
                        <div class="info">
                           <h3 class="name">{{title}}</h3>
                           <p class="catDesc">{{description}}</p>
                        </div>
                     </a>
                  </div>
               </li>
            {{/each}}
         </ul>
      </section>

