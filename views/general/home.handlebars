            <li class="col-sm-2 icon"><a href=""><i class="fas fa-child"></i></a></li>
            <li class="col-sm-2 icon"><a href=""><i class="fas fa-icons"></i></a></li>
            <li class="col-sm-2 iconMenu" id="toProducts" data='["Products"]' ><a href="/products/list"><i class="fas fa-store"></i></a></li>
            <li class="col-sm-2 icon"><a href=""><i class="fas fa-leaf"></i></a></li>
