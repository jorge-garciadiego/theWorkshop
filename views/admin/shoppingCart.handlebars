<link rel="stylesheet" href="/css/shoppingCart.css">

{{#if products}}

      </div>

          <div class="row no-gutters mb-4">
            <div class="col-sm-3 offset-sm-3 order-1 align-self-center">
               Total Amount: <strong class="badge badge-primary badge-pill">${{this.totalPrice}}</strong>
            </div>
            <div class="col-sm-3 order-2 align-self-center">
               <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
            </div>
            
         </div>

      
      <section class="row mb-4 cartGrid">
         {{#each products}}
            <div class="col-sm-3 card singleBox" style="max-width: 300px;">
               <img src="/uploads/{{item.productPic}}" class="card-img-top" alt="...">
               <div class="card-body">
                  <h5 class="card-title">{{item.title}}</h5>
                  <p class="card-text">{{item.artist}}</p>
               </div>
               <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                     <strong>Price &#215; item</strong>
                        <span class="label label-success">{{item.price}}</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                     <h5 class="card-title">Quantity</h5>
                     <span class="badge badge-primary badge-pill">{{this.qty}}</span>
                  </li>
               </ul>
            </div>

         {{/each}}
      </section>




{{else}}
   <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
         <h2>No items in the Cart</h2>
      </div>
   </div>
   
{{/if}}