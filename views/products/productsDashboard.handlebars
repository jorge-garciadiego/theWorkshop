<link rel="stylesheet" href="/css/ourProducts.css">
<section class="products">

   <div class="container">
      <div class="head">
         <h1>{{heading}}</h1>
         <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus sapiente explicabo architecto excepturi, ipsam provident at eaque magnam nemo? Consectetur?
         </p>
      </div>

      
      <form class="mb-2" method="POST" action="/products/list">
      <div class="input-group">
         <select class="custom-select" name="productSearch">
            <option value="all">All</option>
               {{#each categories}}
                  
                  <option value="{{title}}">{{title}}</option>

               {{/each}}

         </select>
         <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
         </div>
      </div>
   </form>

      <main class="productsGrid">
         {{#each data}}
            <div class="singleBox">
               <img src="/uploads/{{productPic}}" alt="">
      
            <div class="boxContent">
               <div class="itemTitle bsTitle">
                  <h3 class="titleName">{{title}}</h3> &nbsp | &nbsp <h3 class="titleCat">{{cateory}}</h3>
               </div>
                
               <div class="productData">
                  <p>Artist: <a class="dataArt" href="#">{{artist}}</a></p>
                  <p>Price: ${{price}}</p>
               </div>

               <a class="aProduct btn" href="#">Add to Cart</a>
               
            </div>
         
            </div>
         {{/each}}
      </main>
   </div>

</section>