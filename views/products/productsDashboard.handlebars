<link rel="stylesheet" href="/css/ourProducts.css">
<section class="products">

   <div class="container">
      <div class="head">
         <h1>{{heading}}</h1>
         <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus sapiente explicabo architecto excepturi, ipsam provident at eaque magnam nemo? Consectetur?
         </p>
      </div>

      <form class="filter" action="/products" method="POST">
         <select name="categories" id="categories">
            <option value="all">All</option>
            {{#each categories}}
               
               <option value="{{title}}">{{title}}</option>

            {{/each}}
           
      </select>
         <div class="searchField">
            <input type="text" class="input" placeholder="Search">
         </div>

         <button class="search" id="searchBt" type="submit">
            <i class="fas fa-search"></i>
         </button>
         
      </form>

      <main class="productsGrid">
         {{#each data}}
            <div class="singleBox">
               <img src="/uploads/{{this.productPic}}" alt="">
      
            <div class="boxContent">
               <div class="itemTitle bsTitle">
                  <h3 class="titleName">{{this.title}}</h3> &nbsp | &nbsp <h3 class="titleCat">{{this.cateory}}</h3>
               </div>
                
               <div class="productData">
                  <p>Artist: <a class="dataArt" href="#">{{this.artist}}</a></p>
                  <p>Price: ${{this.price}}</p>
               </div>

               <a class="aProduct btn" href="#">Add to Cart</a>
               
            </div>
         
            </div>
         {{/each}}
      </main>
   </div>

</section>