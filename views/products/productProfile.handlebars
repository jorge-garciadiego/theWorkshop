

{{title}}

{{artist}}

<section class="productProfile">

   <div class="card mb-3" style="max-width: 500px;">
      <img src="/uploads/{{productPic}}" alt="" class="card-img-top">
      <div class="card-body">
         <h5 class="card-title">{{title}}</h5>
         <p class="card-text"> Artist: {{artist}} </p>
      </div>
   </div>

   <div class="description">
      <div>
         <p>{{description}}</p>
      </div>

      <input type="number" value="1" min="1" max="10" step="1"/>
   </div>

</section>